  head
    title Image Abstraction Layer
    meta(name="description" content="Information from an image search")
    link(id="favicon" rel="icon" href="https://i.chzbgr.com/full/9035428096/h882D54CB/" type="image/x-icon")
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1")
